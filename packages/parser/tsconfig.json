{
	"extends": "tsconfig/node.json",
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	}
}
