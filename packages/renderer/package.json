{
	"name": "@simochee/passport-mrz-renderer",
	"version": "1.0.0",
	"description": "A versatile rendering library for converting passport MRZ strings into high-quality PNG images with OCR-B font support for both browser and Node.js environments",
	"type": "module",
	"keywords": [
		"mrz",
		"passport",
		"rendering",
		"png",
		"ocr-b",
		"canvas",
		"image-generation",
		"travel-document"
	],
	"author": "simochee",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/simochee/passport-mrz-simulator.git",
		"directory": "packages/renderer"
	},
	"bugs": {
		"url": "https://github.com/simochee/passport-mrz-simulator/issues"
	},
	"homepage": "https://github.com/simochee/passport-mrz-simulator#readme",
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		}
	},
	"bin": "./bin/index.mjs",
	"files": [
		"bin",
		"dist",
		"assets"
	],
	"scripts": {
		"build": "unbuild",
		"dev": "tsx src/cli"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.8.1",
		"@types/node": "^24.0.3",
		"tsconfig": "workspace:*",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"unbuild": "^3.5.0"
	},
	"dependencies": {
		"@simochee/passport-mrz-builder": "workspace:*",
		"canvas": "^3.1.1",
		"citty": "^0.1.6"
	}
}
