{
	"name": "@simochee/passport-mrz-renderer",
	"version": "0.0.0-development",
	"description": "A passport MRZ string rendering library that supports both browser and Node.js environments",
	"type": "module",
	"keywords": [
		"mrz",
		"passport"
	],
	"author": "simochee",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/simochee/passport-mrz.git",
		"directory": "packages/renderer"
	},
	"bugs": {
		"url": "https://github.com/simochee/passport-mrz/issues"
	},
	"homepage": "https://github.com/simochee/passport-mrz#readme",
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		}
	},
	"bin": "./bin/index.mjs",
	"files": [
		"bin",
		"dist",
		"assets"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"bin": "tsx src/cli",
		"bin:example": "tsx src/cli --json examples/XS1234567.json --outdir examples",
		"test": "vitest",
		"test:run": "vitest run"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.8.1",
		"@types/node": "^24.0.4",
		"tsconfig": "workspace:*",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"unbuild": "^3.5.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@simochee/passport-mrz-builder": "workspace:*",
		"canvas": "^3.1.1",
		"citty": "^0.1.6"
	}
}
